<div class="tab-pane fade in" id="HRTab" ng-controller="hrRolesController">
    <div class="panel panel-inverse">
		<div class="panel-heading">
			<h3 class="panel-title">HR Quick Actions</h3>
		</div>

		<div class="btn-group" role="group">
			<a data-backdrop="static" data-keyboard="false" href="#divObjModal" role="button" class="btn btn-default" data-toggle="modal"> 
				<span class="glyphicon glyphicon-sort-by-attributes-alt"></span> Divisional Objectives
			</a> <!-- end View Objectives button link -->

			<a data-backdrop="static" data-keyboard="false" href="#defMetricsModal" role="button" class="btn btn-default" data-toggle="modal"> 
				<span class="glyphicon glyphicon-cog"></span> Define Financial Metrics
			</a> <!-- end View Scorecards button link -->

			<a data-backdrop="static" data-keyboard="false" href="#employeeSCModal" role="button" class="btn btn-default" data-toggle="modal"> 
				<span class="glyphicon glyphicon-user"> </span><span class="glyphicon glyphicon-list-alt"> </span> Employee Scorecards
			</a> <!-- end Evaluate Employee button link -->
			
			<hr>

			<div class="list-group">
				<a href="#" class="list-group-item" ng-click="toggleEmpKPA()"> 
					<span class="badge" ng-model="empKPAVal"> {{empKPAVal}} </span> 
					Employees KPAs in your tray 
				</a>

				<a href="#" class="list-group-item" ng-click="toggleApproved()"> 
					<span class="badge" ng-model="empApprovedVal"> {{empApprovedVal}} </span> 
					Objectives Approved 
				</a>
			</div>
		</div>
	</div> <!--end panel-->
</div> <!--end HRTab div-->